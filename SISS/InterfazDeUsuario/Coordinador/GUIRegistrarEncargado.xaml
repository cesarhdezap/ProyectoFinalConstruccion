<Window x:Class="InterfazDeUsuario.Coordinador.GUIRegistrarEncargado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuario.Coordinador"
        mc:Ignorable="d"
        Title="GUIRegistrarEncargado" Height="450" Width="886.625">
    <Grid Margin="0,0,2,0">
        <Label x:Name="lblUniversidadVeracruzana" Content="Universidad Veracruzana" HorizontalAlignment="Left" VerticalAlignment="Top" Height="64" Width="882" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" FontWeight="Bold" FontFamily="Arial" FontSize="48" BorderThickness="2" BorderBrush="#FF110C0C" Margin="0,0,-90,0"/>
        <Label Content="Registrar encargado" HorizontalAlignment="Left" Margin="351,69,0,0" VerticalAlignment="Top" Height="39" Width="215" FontFamily="Arial" FontSize="22" BorderBrush="#FF1B1414"/>
        <Label x:Name="LblNombreDeUsuario" Content="[Nombre de usuario]" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="627,23,0,0" Width="119"/>
        <Label x:Name="LblNombreDeUsuario_Copy" Content="Cerrar sesión" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="751,23,0,0" Width="82" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" FontWeight="Bold"/>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="216,139,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="20"/>
        <TextBox x:Name="TxtPuesto" HorizontalAlignment="Left" Height="24" Margin="400,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" FontFamily="Arial" FontSize="20" TextChanged="TxtNombre_TextChanged"/>
        <Label Content="Puesto:" HorizontalAlignment="Left" Margin="227,177,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="20" Width="76"/>
        <TextBox x:Name="TxtNombre" HorizontalAlignment="Left" Height="24" Margin="400,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" FontFamily="Arial" FontSize="20" TextChanged="TxtNombre_TextChanged"/>
        <Label Content="Organización:" HorizontalAlignment="Left" Margin="169,224,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="20" Width="134"/>
        <Label Content="Correo electrónico: " HorizontalAlignment="Left" Margin="125,268,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="20" Width="178"/>
        <Label Content="Confirmar correo electrónico:" HorizontalAlignment="Left" Margin="37,314,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="20" Width="266"/>
        <TextBox x:Name="TxtOrganizacion" HorizontalAlignment="Left" Height="23" Margin="400,224,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248"/>
        <TextBox x:Name="TxtCorreoElectronico" HorizontalAlignment="Left" Height="23" Margin="400,273,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248"/>
        <TextBox x:Name="TxtConfirmarCorreoElectronico" HorizontalAlignment="Left" Height="23" Margin="400,320,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248"/>
        <Button x:Name="BtnCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="290,376,0,0" VerticalAlignment="Top" Width="92" FontFamily="Arial" FontSize="20"/>
        <Button x:Name="BtnAceptar" Content="Aceptar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="92" Margin="534,371,0,0" FontFamily="Arial" FontSize="20"/>

    </Grid>
</Window>
